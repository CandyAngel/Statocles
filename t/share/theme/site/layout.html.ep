<!DOCTYPE html>
<html>
    <head>
        <title><%= $site->title %></title>
    </head>
    <body>
        <nav>
            % for my $nav ( @{ $site->nav->{ main } } ) {
                <a href="<%= $nav->{href} %>"><%= $nav->{title} %></a>
            % }
        </nav>
        <%= $content %>
        <footer>
            <a href="<%= $site->data->{profile_url} // '' %>">Profile</a>
            <div id="app-info"><%= $self->app->data->{info} // '' %></div>
        </footer>
    </body>
</html>
